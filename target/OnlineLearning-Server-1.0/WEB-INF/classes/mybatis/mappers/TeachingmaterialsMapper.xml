<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.TeachingmaterialsMapper">
	<select id="findTeachingmaterialsList"  resultType="Teachingmaterials">
		select * from teachingmaterials 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Teachingmaterials">
	    select  *  
        from teachingmaterials a  left join course b on a.cid=b.cid  	
		<where>
      		<if test="cmid != null and cmid !=0 ">
		    and a.cmid = #{cmid}
		</if>
		<if test="cmname != null and cmname != ''">
		    and a.cmname = #{cmname}
		</if>
		<if test="cid != null and cid !=0 ">
		    and a.cid = #{cid}
		</if>
		<if test="filepath != null and filepath != ''">
		    and a.filepath = #{filepath}
		</if>
		<if test="uploadtime != null and uploadtime != ''">
		    and a.uploadtime = #{uploadtime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>

    order by ${sort} cmid desc

    <if test="page">
			limit #{offset} ,#{pageSize}
		</if>
	</select>	
	
	<select id="getCount" parameterType="java.util.Map" resultType="Int">
		select count(0) from teachingmaterials a  left join course b on a.cid=b.cid  
		<where>
      		<if test="cmid != null and cmid !=0 ">
		    and a.cmid = #{cmid}
		</if>
		<if test="cmname != null and cmname != ''">
		    and a.cmname = #{cmname}
		</if>
		<if test="cid != null and cid !=0 ">
		    and a.cid = #{cid}
		</if>
		<if test="filepath != null and filepath != ''">
		    and a.filepath = #{filepath}
		</if>
		<if test="uploadtime != null and uploadtime != ''">
		    and a.uploadtime = #{uploadtime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>
	</select>	
	
	<select id="queryTeachingmaterialsById" parameterType="int" resultType="Teachingmaterials">
    select  *  
     from teachingmaterials a  left join course b on a.cid=b.cid  	 where a.cmid=#{value}
  </select>
 
	<insert id="insertTeachingmaterials" useGeneratedKeys="true" keyProperty="cmid" parameterType="Teachingmaterials">
    insert into teachingmaterials
    (cmname,cid,filepath,description,uploadtime)
    values
    (#{cmname},#{cid},#{filepath},#{description},now());
  </insert>
	
	<update id="updateTeachingmaterials" parameterType="Teachingmaterials" >
    update teachingmaterials 
    <set>
		<if test="cmname != null and cmname != ''">
		    cmname = #{cmname},
		</if>
		<if test="cid != null ">
		    cid = #{cid},
		</if>
		<if test="filepath != null and filepath != ''">
		    filepath = #{filepath},
		</if>
		<if test="description != null and description != ''">
		    description = #{description},
		</if>
		<if test="uploadtime != null and uploadtime != ''">
		    uploadtime = #{uploadtime},
		</if>

    </set>
   <where> 
    <if test="condition != null and condition != ''">
      ${condition}
    </if>
    <if test="cmid != null or cmid != ''">
      cmid=#{cmid}
    </if>
   </where>     
  </update>	
 
	
	<delete id="deleteTeachingmaterials" parameterType="int">
    delete from  teachingmaterials where cmid=#{value}
  </delete>

	
	
</mapper>

 
