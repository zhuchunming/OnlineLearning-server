<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.NotificationsMapper">
	<select id="findNotificationsList"  resultType="Notifications">
		select * from notifications 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Notifications">
	    select  *  
        from notifications a  	
		<where>
      		<if test="annid != null and annid !=0 ">
		    and a.annid = #{annid}
		</if>
		<if test="title != null and title != ''">
		    and a.title = #{title}
		</if>
		<if test="publishtime != null and publishtime != ''">
		    and a.publishtime = #{publishtime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>

    order by ${sort} annid desc

    <if test="page">
			limit #{offset} ,#{pageSize}
		</if>
	</select>	
	
	<select id="getCount" parameterType="java.util.Map" resultType="Int">
		select count(0) from notifications a  
		<where>
      		<if test="annid != null and annid !=0 ">
		    and a.annid = #{annid}
		</if>
		<if test="title != null and title != ''">
		    and a.title = #{title}
		</if>
		<if test="publishtime != null and publishtime != ''">
		    and a.publishtime = #{publishtime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>
	</select>	
	
	<select id="queryNotificationsById" parameterType="int" resultType="Notifications">
    select  *  
     from notifications a  	 where a.annid=#{value}
  </select>
 
	<insert id="insertNotifications" useGeneratedKeys="true" keyProperty="annid" parameterType="Notifications">
    insert into notifications
    (title,content,publishtime)
    values
    (#{title},#{content},now());
  </insert>
	
	<update id="updateNotifications" parameterType="Notifications" >
    update notifications 
    <set>
		<if test="title != null and title != ''">
		    title = #{title},
		</if>
		<if test="content != null and content != ''">
		    content = #{content},
		</if>
		<if test="publishtime != null and publishtime != ''">
		    publishtime = #{publishtime},
		</if>

    </set>
   <where> 
    <if test="condition != null and condition != ''">
      ${condition}
    </if>
    <if test="annid != null or annid != ''">
      annid=#{annid}
    </if>
   </where>     
  </update>	
 
	
	<delete id="deleteNotifications" parameterType="int">
    delete from  notifications where annid=#{value}
  </delete>

	
	
</mapper>

 
