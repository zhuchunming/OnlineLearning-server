<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.StudentsMapper">
	<select id="findStudentsList"  resultType="Students">
		select * from students 
	</select>
	
	<select id="query" parameterType="java.util.Map" resultType="Students">
	    select  *  
        from students a  	
		<where>
      		<if test="sno != null and sno != ''">
		    and a.sno = #{sno}
		</if>
		<if test="password != null and password != ''">
		    and a.password = #{password}
		</if>
		<if test="stname != null and stname != ''">
		    and a.stname = #{stname}
		</if>
		<if test="gender != null and gender != ''">
		    and a.gender = #{gender}
		</if>
		<if test="phone != null and phone != ''">
		    and a.phone = #{phone}
		</if>
		<if test="email != null and email != ''">
		    and a.email = #{email}
		</if>
		<if test="major != null and major != ''">
		    and a.major = #{major}
		</if>
		<if test="classes != null and classes != ''">
		    and a.classes = #{classes}
		</if>
		<if test="avatar != null and avatar != ''">
		    and a.avatar = #{avatar}
		</if>
		<if test="registertime != null and registertime != ''">
		    and a.registertime = #{registertime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>

    order by ${sort} sno desc

    <if test="page">
			limit #{offset} ,#{pageSize}
		</if>
	</select>	
	
	<select id="getCount" parameterType="java.util.Map" resultType="Int">
		select count(0) from students a  
		<where>
      		<if test="sno != null and sno != ''">
		    and a.sno = #{sno}
		</if>
		<if test="password != null and password != ''">
		    and a.password = #{password}
		</if>
		<if test="stname != null and stname != ''">
		    and a.stname = #{stname}
		</if>
		<if test="gender != null and gender != ''">
		    and a.gender = #{gender}
		</if>
		<if test="phone != null and phone != ''">
		    and a.phone = #{phone}
		</if>
		<if test="email != null and email != ''">
		    and a.email = #{email}
		</if>
		<if test="major != null and major != ''">
		    and a.major = #{major}
		</if>
		<if test="classes != null and classes != ''">
		    and a.classes = #{classes}
		</if>
		<if test="avatar != null and avatar != ''">
		    and a.avatar = #{avatar}
		</if>
		<if test="registertime != null and registertime != ''">
		    and a.registertime = #{registertime}
		</if>
		<if test="condition != null and condition != ''">
		    ${condition} 
		</if>

    </where>
	</select>	
	
	<select id="queryStudentsById" parameterType="String" resultType="Students">
    select  *  
     from students a  	 where a.sno=#{value}
  </select>
 
	<insert id="insertStudents" useGeneratedKeys="true" keyProperty="sno" parameterType="Students">
    insert into students
    (sno,password,stname,gender,phone,email,major,classes,avatar,registertime)
    values
    (#{sno},#{password},#{stname},#{gender},#{phone},#{email},#{major},#{classes},#{avatar},now());
  </insert>
	
	<update id="updateStudents" parameterType="Students" >
    update students 
    <set>
		<if test="sno != null and sno != ''">
		    sno = #{sno},
		</if>
		<if test="password != null and password != ''">
		    password = #{password},
		</if>
		<if test="stname != null and stname != ''">
		    stname = #{stname},
		</if>
		<if test="gender != null and gender != ''">
		    gender = #{gender},
		</if>
		<if test="phone != null and phone != ''">
		    phone = #{phone},
		</if>
		<if test="email != null and email != ''">
		    email = #{email},
		</if>
		<if test="major != null and major != ''">
		    major = #{major},
		</if>
		<if test="classes != null and classes != ''">
		    classes = #{classes},
		</if>
		<if test="avatar != null and avatar != ''">
		    avatar = #{avatar},
		</if>
		<if test="registertime != null and registertime != ''">
		    registertime = #{registertime},
		</if>

    </set>
   <where> 
    <if test="condition != null and condition != ''">
      ${condition}
    </if>
    <if test="sno != null or sno != ''">
      sno=#{sno}
    </if>
   </where>     
  </update>	
 
	
	<delete id="deleteStudents" parameterType="String">
    delete from  students where sno=#{value}
  </delete>

	
	
</mapper>

 
